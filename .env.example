# =========================
# Docker Compose (repo root)
# =========================

# App and DB exposed ports on host
APP_PORT=3000
DB_PORT=5432

# Optional container names
APP_CONTAINER_NAME=accountflow-app
DB_CONTAINER_NAME=accountflow-db

# PostgreSQL credentials used inside compose network
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=accountflow

# Volume mount control (host:container)
# 1) Database data mount (bind mount path)
DB_DATA_HOST_PATH=./postgres-data
DB_DATA_CONTAINER_PATH=/var/lib/postgresql/data

# 2) Application data mount (bind mount by default)
APP_DATA_HOST_PATH=./apps/accountflow/.data
APP_DATA_CONTAINER_PATH=/app/accountflow/.data

# =========================
# Application runtime config
# =========================

# If app runs on host (npm run dev), keep localhost.
# In Docker Compose, DATABASE_URL is overridden to use service hostname `postgres`.
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/accountflow

OPENAI_API_KEY=sk-your-api-key-here
OPENAI_API_ENDPOINT=https://api.openai.com/v1
OPENAI_MODEL=gpt-4
MOCK_AI=true
NODE_ENV=development

# Must be 32 chars in production.
AI_KEY_ENCRYPTION_SECRET=your-32-character-secret-key-here
